<PhysiCell_settings version="devel-version">
	<domain>
		<x_min>-1000</x_min>
		<x_max>1000</x_max>
		<y_min>-1000</y_min>
		<y_max>1000</y_max>
		<z_min>-10</z_min>
		<z_max>10</z_max>
		<dx>20</dx>
		<dy>20</dy>
		<dz>20</dz>
		<use_2D>true</use_2D>
	</domain>
	
	<overall>
		<max_time units="min">2880</max_time> <!-- 2 days * 24 h * 60 min -->
		<time_units>min</time_units>
		<space_units>micron</space_units>
	</overall>
	
	<parallel>
		<omp_num_threads>4</omp_num_threads>
	</parallel> 
	
	<save>
		<folder>.</folder> <!-- use . for root --> 

		<full_data>
			<interval units="min">10</interval>
			<enable>true</enable>
		</full_data>
		
		<SVG>
			<interval units="min">5</interval>
			<enable>true</enable>
		</SVG>
		
		<legacy_data>
			<enable>false</enable>
		</legacy_data>
	</save>
	
	<microenvironment_setup>
		<variable name="director signal" units="dimensionless" ID="0">
			<physical_parameter_set>
				<diffusion_coefficient units="micron^2/min">1000</diffusion_coefficient>
				<decay_rate units="1/min">.1</decay_rate> <!-- 1 for cells  --> 
			</physical_parameter_set>
			<initial_condition units="dimensionless">0</initial_condition>
			<Dirichlet_boundary_condition units="dimensionless" enabled="false">1</Dirichlet_boundary_condition>
		</variable>
		
		<variable name="cargo signal" units="dimensionless" ID="1">
			<physical_parameter_set>
				<diffusion_coefficient units="micron^2/min">1000</diffusion_coefficient>
				<decay_rate units="1/min">.4</decay_rate> <!-- 1 for cells  --> 
			</physical_parameter_set>
			<initial_condition units="dimensionless">0</initial_condition>
			<Dirichlet_boundary_condition units="dimensionless" enabled="false">1</Dirichlet_boundary_condition>
		</variable>
		
		<options>
			<calculate_gradients>true</calculate_gradients>
			<track_internalized_substrates_in_each_agent>false</track_internalized_substrates_in_each_agent>
			<!-- not yet supported --> 
			<initial_condition type="matlab" enabled="false">
				<filename>./config/initial.mat</filename>
			</initial_condition>
			<!-- not yet supported --> 
			<dirichlet_nodes type="matlab" enabled="false">
				<filename>./config/dirichlet.mat</filename>
			</dirichlet_nodes>
		</options>
	</microenvironment_setup>		
	
	<user_parameters>
		<random_seed type="int" units="dimensionless">0</random_seed> 

		<!-- worker params --> 
		<div type="divider" description="---Worker Parameters---"/>
		<elastic_coefficient type="double" units="1/min" description="strength of worker-cargo adhesion">0.15</elastic_coefficient>

		<worker_motility_persistence_time type="double" units="min" description="time between direction changes for workers">5.0</worker_motility_persistence_time>
		<worker_migration_speed type="double" units="micron/min" discription="worker migration speed">5.0</worker_migration_speed>
		<attached_worker_migration_bias type="double" units="dimensionless" 
			description="how strictly attached workers follow chemotactic signals">1.0</attached_worker_migration_bias>
		<unattached_worker_migration_bias type="double" units="dimensionless"
			description="how strictly unattached workers follow chemotactic signals">0.5</unattached_worker_migration_bias>

		<!-- misc --> 
		<div type="divider" description="---Misc---"/>
		<number_of_directors type="int" units="none" description="number of director cells">15</number_of_directors> 
		<number_of_cargo_clusters type="int" units="none" description="number of 7-cell cargo clusters">100</number_of_cargo_clusters>
		<number_of_workers type="int" units="none" description="number of worker cells">50</number_of_workers>
		
		<!-- cargo parameters --> 
		<drop_threshold type="double" units="dimensionless" description="drop cargo when director signal exceeds this level">0.4</drop_threshold> 
		
		<!-- colors --> 
		<div type="divider" description="---Colors---"/>
		<worker_color type="string" units="none" description="color for worker cells (see W3C colors)">red</worker_color>
		<cargo_color type="string" units="none" description="color for cargo cells">blue</cargo_color>
		<director_color type="string" units="none" description="color for director cells">limegreen</director_color> 
	
	</user_parameters>
	
</PhysiCell_settings>
